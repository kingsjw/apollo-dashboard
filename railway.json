{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_22", "bun"]
        },
        "install": {
          "cmds": ["bun install"]
        },
        "build": {
          "cmds": ["bun run build --filter=@apollo-dashboard/server"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node apps/server/dist/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
